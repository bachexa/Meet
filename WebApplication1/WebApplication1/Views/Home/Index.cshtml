<script>
    (function () {
        const root = document.querySelector('.ms-plans');
        if (!root) return;

        const tabs = root.querySelectorAll('[role="tab"]');
        const panels = root.querySelectorAll('[role="tabpanel"]');
        const heroImg = root.querySelector('#ms-hero-img');

        function activate(tab) {
            // deactivate
            tabs.forEach(t => {
                t.classList.remove('is-active');
                t.setAttribute('aria-selected', 'false');
                t.setAttribute('tabindex', '-1');
            });
            panels.forEach(p => { p.hidden = true; p.classList.remove('is-visible'); });

            // activate
            tab.classList.add('is-active');
            tab.setAttribute('aria-selected', 'true');
            tab.removeAttribute('tabindex');

            const id = tab.dataset.tab;
            const panel = root.querySelector(`[data-panel="${id}"]`);
            if (panel) {
                panel.hidden = false;
                panel.classList.add('is-visible');

                // Swap hero image using data attributes on the panel
                const src = panel.dataset.hero || heroImg.dataset.fallback;
                const alt = panel.dataset.heroAlt || '';
                if (src) heroImg.setAttribute('src', src);
                heroImg.setAttribute('alt', alt);
            }
        }

        tabs.forEach(t => {
            t.addEventListener('click', () => activate(t));
            t.addEventListener('keydown', (e) => {
                const i = Array.from(tabs).indexOf(t);
                if (e.key === 'ArrowRight') { e.preventDefault(); const n = tabs[(i + 1) % tabs.length]; n.focus(); activate(n); }
                if (e.key === 'ArrowLeft') { e.preventDefault(); const p = tabs[(i - 1 + tabs.length) % tabs.length]; p.focus(); activate(p); }
            });
        });

        // initialize to the currently active tab
        const initial = root.querySelector('.ms-tab.is-active') || tabs[0];
        if (initial) activate(initial);
    })();
</script>






